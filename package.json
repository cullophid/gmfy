{
  "name": "gmfy",
  "version": "1.1.0",
  "main": "index.js",
  "scripts": {
    "install:elm" : "elm package install -y",
    "build:elm": "elm make src/elm/Main.elm --output public/elm.js",
    "build:sass": "node-sass src/sass/main.scss public/bundle.css",
    "build": "npm run build:sass && npm run build:elm",
    "watch:elm": "watch 'npm run build:elm' src/elm",
    "watch:sass": "npm run build:sass -- -w src/sass",
    "watch": "parallelshell 'npm run watch:elm' 'npm run watch:sass'",
    "livereload": "parallelshell 'livereload public/' 'npm run watch'",
    "dev": "parallelshell 'npm start' 'npm run livereload'",
    "start": "serve public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cullophid/gmfy.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {},
  "dependencies": {
    "elm": "^0.16.0",
    "node-sass": "^3.4.2"
  },
  "devDependencies": {
    "serve": "^1.4.0"
  }
}
